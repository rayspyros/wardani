    <TextView
        android:id="@+id/payment_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:text="15.000.000"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/payment_detail"
        android:layout_toRightOf="@id/text_harga" />

    <TextView
        android:id="@+id/text_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Order: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_waktu"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/payment_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:text="Kabongan Kidul RT 4/RW 1, Rembang, 59671, 081215409800."
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/payment_waktu"
        android:layout_toRightOf="@id/text_harga" />

    <Button
        android:id="@+id/btnBayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bayar Sekarang"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_primary"
