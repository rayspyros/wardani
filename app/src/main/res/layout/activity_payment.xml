<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/payment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:theme="?attr/actionBarTheme"
        app:title="Pembayaran"
        app:titleTextColor="@color/black"/>

    <TextView
        android:id="@+id/payment_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ki Warseno Slank"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pemesan: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_nama"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/payment_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muhammad Eko Ramayantyas S"
        android:textSize="16sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/payment_nama"
        android:layout_toRightOf="@id/text_customer"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text_tgl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hari, Tanggal Pelaksanaan: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_customer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/payment_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sabtu, 16 Maret 2024"
        android:textSize="16sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/payment_customer"
        android:layout_toRightOf="@id/text_tgl"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Harga: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_detail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acara Mulai: "
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@id/payment_tanggal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/payment_waktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:text="00.00"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/payment_tanggal"
        android:layout_toRightOf="@id/text_harga" />

