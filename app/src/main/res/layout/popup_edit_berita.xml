<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv2_gambar"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/placeholder_img"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btn2_pilih_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv2_gambar"
            android:layout_centerHorizontal="true"
            android:text="Pilih Foto"/>

        <EditText
            android:id="@+id/pp2_judul_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn2_pilih_foto"
            android:hint="Judul Berita"
            android:inputType="text"/>

        <TextView
            android:id="@+id/pp2_waktu_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp2_judul_berita"
            android:textSize="18sp"
            android:hint="Tanggal Unggah"
            android:background="?android:attr/editTextBackground"
            android:padding="8dp"/>

        <EditText
            android:id="@+id/pp2_deskripsi_berita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp2_waktu_upload"
            android:hint="Deskripsi Berita"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|start"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pp2_deskripsi_berita"
            android:layout_marginTop="16dp"
            android:text="Simpan"/>
    </RelativeLayout>
</ScrollView>
