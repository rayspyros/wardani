<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/placeholder_img"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/btn_pilih_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gambar"
        android:layout_centerHorizontal="true"
        android:text="Pilih Foto"/>

    <EditText
        android:id="@+id/pp_nama_dalang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_pilih_foto"
        android:hint="Nama Seniman"
        android:inputType="text"/>

    <EditText
        android:id="@+id/pp_harga_jasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_nama_dalang"
        android:hint="Harga Seniman"
        android:inputType="number"/>

    <EditText
        android:id="@+id/pp_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_harga_jasa"
        android:hint="Deskripsi Seniman"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:gravity="top|start"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btn_tambah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pp_deskripsi"
        android:layout_marginTop="16dp"
        android:text="Tambah"/>

</RelativeLayout>
