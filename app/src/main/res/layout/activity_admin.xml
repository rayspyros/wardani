<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.AdminActivity"
    android:background="@drawable/background_shape">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/admin_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Admin"/>

    <!-- Content Area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/admin_toolbar"
        android:padding="12dp">

        <!-- Menu Kelola Seniman -->
        <LinearLayout
            android:id="@+id/kelola_seniman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_background"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_seniman"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Seniman"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Menu Kelola Pemesanan -->
        <LinearLayout
            android:id="@+id/kelola_pemesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_background"
            android:padding="16dp"
            android:layout_below="@id/kelola_seniman"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cart"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Pemesanan"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <!-- Menu Kelola Ketersediaan Seniman -->
        <LinearLayout
            android:id="@+id/kelola_ketersediaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/item_background"
            android:padding="16dp"
            android:layout_below="@id/kelola_pemesanan"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calendar"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelola Ketersediaan Seniman"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
