<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactUsActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/contactus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Kontak Kami" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contactus_toolbar"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#dddddd"/>

            <ImageView
                android:id="@+id/logoWardani"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/forwardKontak"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/logoWardani"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Wardani Developer"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/alamat1Kontak"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/forwardKontak"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Gg. TimasanDusun I, Makamhaji"
                android:textColor="@android:color/black"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/alamat2Kontak"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/alamat1Kontak"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Kec. Kartasura, Kab. Sukoharjo"
                android:textColor="@android:color/black"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/alamat3Kontak"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/alamat2Kontak"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Jawa Tengah"
                android:textColor="@android:color/black"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/alamat4Kontak"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@id/alamat3Kontak"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="57161"
                android:textColor="@android:color/black"
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/followKontak"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/alamat4Kontak"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Nomor Telepon"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/iconKontak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/followKontak"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/phone"/>

            <TextView
                android:id="@+id/nomor_wa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/followKontak"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/iconKontak"
                android:text="+62 812-1540-9800"
                android:textSize="17sp" />
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal">
        <include layout="@layout/bottom_navigation_layout" />
    </LinearLayout>
</RelativeLayout>